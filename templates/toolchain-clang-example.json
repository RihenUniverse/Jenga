{
  "name": "my-custom-clang",
  "type": "clang",
  "description": "Custom Clang 17 toolchain with libc++",
  "target": {
    "os": "Linux",
    "arch": "x86_64",
    "env": "gnu"
  },
  "target_triple": "x86_64-unknown-linux-gnu",
  "sysroot": "/path/to/sysroot",
  "cc": "/usr/bin/clang-17",
  "cxx": "/usr/bin/clang++-17",
  "linker": "/usr/bin/clang++-17",
  "ar": "/usr/bin/llvm-ar-17",
  "cflags": [
    "--target=x86_64-unknown-linux-gnu",
    "-march=native"
  ],
  "cxxflags": [
    "--target=x86_64-unknown-linux-gnu",
    "-std=c++20",
    "-stdlib=libc++",
    "-march=native"
  ],
  "ldflags": [
    "--target=x86_64-unknown-linux-gnu",
    "-stdlib=libc++",
    "-lc++abi",
    "-fuse-ld=lld"
  ],
  "arflags": [],
  "defines": [],
  "include_dirs": [
    "/usr/include/c++/v1"
  ],
  "lib_dirs": [
    "/usr/lib/x86_64-linux-gnu"
  ]
}
